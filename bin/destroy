#!/usr/bin/env sh
set -e
. "lib/init.sh"

MASTER_NAME=$1

case $HOST in
  "localhost")
    cd kontena/$COMPONENT && bin/destroy && cd ../..
  ;;
  *)
    ssh $HOST "cd kontena/$COMPONENT && sudo bin/destroy"
  ;;
esac

#TODO: sh wat
if [ "$COMPONENT" = "master" ]; then
  ruby lib/destroy.rb --master_name $MASTER_NAME
fi
