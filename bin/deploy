#!/usr/bin/env sh
set -e
. "lib/init.sh"

ssh $HOST "mkdir -p kontena kontena/lib kontena/docker kontena/$COMPONENT"

echo "Making sure that $HOST is up to date for $COMPONENT ..."
rsync -av -e ssh --delete-after kontena/support/ $HOST:kontena/support/
rsync -av -e ssh --delete-after kontena/docker/ $HOST:kontena/docker/
rsync -av -e ssh --delete-after kontena/$COMPONENT/ $HOST:kontena/$COMPONENT/

echo "$HOST up to date for $COMPONENT."